{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowJs": true,
        "moduleResolution":"node",
        "jsx": "react",
        "outDir": ".config",
        "removeComments": false,
        "target": "ES2020",
        "declaration": true,
        "declarationMap": false,
        "inlineSourceMap": false,
        "inlineSources": false,
        "strict": true,
        "module": "ES2020",
        "esModuleInterop": true,
        "types": ["node"]
    },

	"include": [
        "**/*", 
    ],
    
}